{
  "name": "avenue/avenue",
  "type": "project",
  "keywords": [
    "avenue",
    "swoole",
    "hyperf",
    "developer"
  ],
  "homepage": "https://www.avenue.wang/",
  "description": "Quickly build a background management system for web applications",
  "license": "Apache-2.0",
  "require": {
    "google/apiclient": "^2.17",
    "hyperf/session": "^3.1",
    "mineadmin/app-store": "~2.0",
    "naroat/php-helper": "^1.0",
    "reasno/swoole-aliyunoss-addon": "^1.0",
    "xmo/jwt-auth": "~2.0",
    "xmo/mine-core": "~2.0",
    "xmo/mine-generator": "~2.0",
    "xmo/mine-helpers": "~2.0",
    "xmo/mine-office": "~2.0",
    "xmo/mine-service": "~2.0",
    "xmo/mine-translatable": "~2.0",
    "yurunsoft/yurun-oauth-login": "^3.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "hyperf/devtool": "3.1.*",
    "hyperf/ide-helper": "3.1.*",
    "hyperf/testing": "3.1.*",
    "hyperf/watcher": "3.1.*",
    "mockery/mockery": "^1.0",
    "pestphp/pest": "^2.33",
    "phpstan/phpstan": "^1.10",
    "swoole/ide-helper": "^5.0",
    "zircote/swagger-php": "4.8.0"
  },
  "suggest": {
    "ext-openssl": "Required to use HTTPS.",
    "ext-json": "Required to use JSON.",
    "ext-pdo": "Required to use MySQL Client.",
    "ext-pdo_mysql": "Required to use MySQL Client.",
    "ext-redis": "Required to use Redis Client."
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Api\\": "api/"
    },
    "files": [
      "common/common.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTests\\": "./tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "rm -rf runtime/container"
    ],
    "test": "pest ",
    "coverage": "pest --coverage --coverage-clover tests/coverage.xml ",
    "cs-fix": "php-cs-fixer fix $1",
    "analyse": "phpstan analyse --memory-limit 500M -l 0 -c phpstan.neon ./app ./config ./api ./common",
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "php ./bin/hyperf.php start"
    ],
    "pre-autoload-dump": "Google\\Task\\Composer::cleanup"
  },
  "extra": {
    "google/apiclient-services": [
      "Oauth2"
    ]
  }
}
